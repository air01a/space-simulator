#:kivy 1.0.0

# content here

<ColoredLabel@Label>:
    bg_color: 1.0, 1.0, 1.0
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

<Compas>
    canvas.before:
        Rectangle:
            source: 'images/compas.png'
    background_normal: 'images/compas.png'
<Graphics>  
    BoxLayout:
        orientation:'horizontal'
        Compas:
            id: compas
            size_hint: None,None
            size: 120,120
            pos_hint: {"x":0, "top":1}

        Button:
            text: 'Engine On'
            size: 200,60
            size_hint: None,None
            pos_hint: {"x":0, "top":1}


        
<MainWindow>
    canvas.before:
        Rectangle:
            source : 'images/galaxy.jpeg'
            pos : self.pos
            size : self.size
    BoxLayout:
        size: root.width,root.height

        orientation: 'vertical'
        Graphics:
            id: graphics
            size_hint: 1, 0.8
            pos:self.pos
            size: self.size
        ColoredLabel:
            id: controlInfoLabel
            size_hint: .5,.1
            bg_color: (0, 0, 1, 0.25)
        ColoredLabel:
            id: infoLabel
            size_hint: 1,.1
            bg_color: 0, 1, 0, 0.25

    
