#:kivy 1.0.0
#:import Factory kivy.factory.Factory

# content here

<Goto>:
    auto_dismiss: False
    size_hint: None, None
    size: 400,400
    title: 'Goto manager'
    on_open: self.init()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                size_hint: 0.8,1
                text: 'Hohmann transfert'
            CheckBox:
                size_hint: 0.2,1
                active: True
                id: hohmann
        BoxLayout:
            orientation: 'horizontal'
            center: self.center
            AnchorLayout:
                anchor_x: 'left'
                Button: 
                    size_hint: None,None
                    text: '<'
                    size: 20,30
                    on_press: root.on_goto_touch(-1)
                    background_normal: ''
                    background_color: 1, .3, .4, .85
            AnchorLayout:
                anchor_x: 'center'
                Label:
                    id: goto_orbiter_control
                    text : 'target'
                    size_hint: None,None
                    size: 200,30
                    center: self.parent.center
            AnchorLayout:
                anchor_x: 'right'
                Button: 
                    size_hint: None,None
                    text: '>'
                    size: 20,30
                    on_press: root.on_goto_touch(1)
                    background_normal: ''
                    background_color: 1, .3, .4, .85
        Button:
            text: 'Goto'
            on_release: root.validate()
            background_normal: ''
            background_color: 0, 0.5, 0, 1
        Button:
            text: 'Cancel'
            on_release: root.cancel()


<ColoredLabel@Label>:
    bg_color: 1.0, 1.0, 1.0
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

<Compas>
    background_normal: 'images/compas.png'

<Filechooser>:
    #label: label 
    # Providing the orientation
    orientation: 'vertical'

    # Creating the File list / icon view
    BoxLayout:
 
        # Creating list view one side
        FileChooserListView:
            canvas.before:
                Color:
                    rgb: .4, .5, .5
                Rectangle:
                    pos: self.pos
                    size: self.width,root.height
            path: './scenario'
            on_selection: root.select(*args)
 
        # Creating Icon view other side
        FileChooserIconView:
            canvas.before:
                Color:
                    rgb: .5, .4, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            path: './scenario'
            on_selection: root.select(*args)
 

<Graphics> 
    BoxLayout:
        orientation: 'vertical'
       # size_hint: 1,1

        BoxLayout:
            orientation:'horizontal'
            size_hint: None, None
            size: root.size
            Compas:
                id: compas
                size_hint: None,None
                size: 120,120
                pos_hint: {"x":0, "top":1}
            BoxLayout:
                orientation: 'vertical'
                pos_hint: {"x":0, "top":1}
                size_hint: None,None
                size: 700,160
                spacing: 10
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: None,None
                    size: 700, 40
                    pos: 0, self.height-40
                    Label:
                        text: 'Engine'
                        size: 320,40
                    Switch:
                        size: 100,40
                        id: switch
                        on_active: root.engine_on(self.active)
                    Button: 
                        size_hint: None,None
                        text: 'Prgrde'
                        size: 100,40
                        background_normal: ''
                        background_color: 0, 0.5, 0, .85
                        on_release: root.orbiter_orientation_lock('pro')
                        pos_hint: {  'top':1}
                    Button: 
                        size_hint: None,None
                        text: 'Retgde'
                        size: 100,40
                        background_normal: ''
                        background_color: 0.5, 0, 0, .85
                        on_release: root.orbiter_orientation_lock('ret')
                        pos_hint: {  'top':1}

                BoxLayout:
                    orientation: 'horizontal'
                    size: 400,50
                    Slider:
                        id: thrust
                        min: 0
                        max: 100
                        step: 0.5
                        value: 100
                        size_hint: None,None
                        size: 400,50
                        on_value: root.change_thrust(self.value)
                        orientation: 'horizontal'
                        pos_hint: {"x":0, "top":1}
                    Button: 
                        size_hint: None,None
                        text: ' RCS Push'
                        size: 140,40
                        background_normal: ''
                        background_color: 0.5, 0, 0, .85
                        on_release: root.rcs_push()
                        pos_hint: {  'top':1}

            RelativeLayout:
                orientation:'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    size: 500,300
                    pos_hint: { 'right': 1, 'top':1}
                    size_hint: None, None
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint: None, None
                        size: 500,80
                        pos_hint: { 'right': 1, 'top':1}
                        Label:
                            size: 200,80
                            text: 'Time Factor'
                            pos_hint: { 'right': 1, 'top':1}
                        Slider:
                            id:time
                            min:0
                            max:100
                            step:1
                            value:1
                            size: 300,80
                            size_hint: None, None
                            pos_hint: { 'right': 1, 'top':1}
                            orientation: 'horizontal'
                            on_value: root.change_time(self.value)
                    BoxLayout:
                        orientation:'horizontal'
                        size_hint: None, None
                        size: 500,80
                        pos_hint: { 'right': 1, 'top':1}
                        Label:
                            size: 200,80
                            text: 'Zoom Factor'
                            pos_hint: { 'right': 1, 'top':1}
                        Slider:
                            id:zoom
                            min:0
                            max:100
                            step:1
                            value:1
                            size: 300,80
                            size_hint: None, None
                            pos_hint: { 'right': 1, 'top':1}
                            orientation: 'horizontal'
                            on_value: root.change_zoom(self.value)
                    BoxLayout:
                        orientation:'vertical'
                        size_hint: None,None
                        size: 300,100
                        pos_hint: { 'right': 1, 'top':1}
                        Button: 
                            size_hint: None,None
                            
                            text: 'GoTo'
                            size: 200,30
                            background_normal: ''
                            background_color: 0.2, 0.2, 0.5, .85
                            on_release: root.goto.open()
                        Label:
                            size_hint: None,None
                            halign: 'left'
                            id: goto_time
                            text: ''
                            size: 300,30
                        Label:
                            size_hint: None,None
                            halign: 'left'
                            id: goto_deltav
                            text: ''
                            size: 300,30


        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            Button: 
                size_hint: None,None
                text: '<'
                size: 20,30
                on_press: root.on_orbiter_touch(-1)
                background_normal: ''
                background_color: 1, .3, .4, .85
            Label:
                id: orbiter_control
                text : 'orbiter'
                size_hint: None,None
                size: 200,30
            Button: 
                size_hint: None,None
                text: '>'
                size: 20,30
                on_press: root.on_orbiter_touch(1)
                background_normal: ''
                background_color: 1, .3, .4, .85
            
            Button: 
                size_hint: None,None
                text: 'Control'
                size: 100,30
                on_press: root.change_orbiter()
                background_normal: ''
                background_color: 0.5, 0.5, 0.5, .85
            Button:
                size_hint: None,None
                text: 'drop stage'
                size: 180,30
                background_normal: ''
                background_color: 0.4, 0.2, 0.5, .85
                on_press: root.drop_stage()
                
<MainWindow>
    canvas.before:
        Rectangle:
            source : 'images/galaxy.jpeg'
            pos : self.pos
            size : self.width, self.height
    BoxLayout:
        size: root.width,root.height
        orientation: 'vertical'
        Graphics:
            id: graphics

            size_hint: 1, 0.8
            pos:self.pos
            #size: self.width, self.height
        ColoredLabel:
            id: controlInfoLabel
            size_hint: .3,.05
            #size_hint: None, None
            #size: 600,100
            bg_color: (0, 0, 1, 0.25)
        ColoredLabel:
            id: infoLabel
            size_hint: 1,.05
            #size_hint: None, None
            #size: root.width, 100
            bg_color: 0, 1, 0, 0.25


